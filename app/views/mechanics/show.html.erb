<h1><%= @mechanic.name %></h1>
<h4>Years experience: <%= @mechanic.years_experience %></h4>

<% @open_rides.each do |ride| %>
  <p><%= ride.name %>, Thrill: <%= ride.thrill_rating %></p>
<% end %>

<br>
<p>Add ride to workload:</p>
<%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f| %>
  <%= f.label :ride_id %>
  <%= f.number_field :ride_id %>

  <%= f.submit %>
<% end %>
